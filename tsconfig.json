{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es6"
        ],
        "baseUrl": "./",
        "allowJs": true,
        "paths": {
            "@almight-sdk/core/*": ["packages/core/src/*"],
            "@lamight-sdk/auth/*": ["packages/auth/src/*"],
            "@lamight-sdk/platform-node/*": ["packages/paltform-node/src/*"],
            "@almight-sdk/connector/*": ["packages/connector/src/*"],
            "@almight-sdk/utils/*": ["packages/utils/src/*"],
            "@almight-sdk/ethereum-chain-adapter/*": ["chain-adapters/ethereum/src/*"],
            "@almight-sdk/uikit/*": ["packages/uikit/src/*"]
        },
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
    "include": ["@types/node"]
}